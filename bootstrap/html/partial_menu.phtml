<div class="hidden-xs">
    <nav class="navbar navbar2">
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-menu-for-large">
                <ul class="nav navbar-nav">
                    {% if settings.side_menu_home %}
                        <li {% if request._url == '' %} class="active"{% endif %}>
                            <a href="{{ ''|link }}" title="{% trans 'Home' %}">
                                <i class="fa fa-home"></i>
                                {% trans 'Home' %}</a>
                        </li>
                    {% endif %}
{% if client %}
                        {% if settings.side_menu_invoices %}
                            <li {% if request._url starts with '/invoice' %} class="active" {% endif %}>
                                <a href="{{ 'invoice'|link }}" title="{% trans 'Invoices' %}">
                                    <span class="">
                                        <i class="fa fa-credit-card"></i>
                                        {% trans 'Invoices' %}</span>
                                </a>
                            </li>
                        {% endif %}
                        {% if settings.side_menu_services %}
                            <li {% if request._url starts with '/order/service' %} class="active" {% endif %}>
