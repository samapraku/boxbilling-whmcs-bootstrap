                        <li {% if request._url starts with '/order/service' %} {% elseif request._url starts with '/order' %} class="active" {% endif %}>
                            <a href="{{ '/order'|link }}" title="{% trans 'Order' %}">
                                <i class="fa fa-shopping-cart"></i>
                                {% trans 'New Order' %}</a>
                        </li>
{% endif %}
                </ul>
