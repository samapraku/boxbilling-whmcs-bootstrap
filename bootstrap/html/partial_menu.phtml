                                <span>
                                    <i class="fa fa-life-ring"></i>
                                    {% trans 'Support' %}</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                {% if settings.side_menu_support %}
                                    <li>
                                        <a href="{{ 'support'|link }}"><span><i class="fa fa-life-ring"></i> {% trans 'Tickets' %}</span></a>
                                    </li>
                                {% endif %}
